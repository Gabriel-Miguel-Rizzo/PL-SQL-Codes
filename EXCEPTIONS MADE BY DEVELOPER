
DECLARE
  vnome         z_tabela_exercicio.nome%TYPE;
  vnumero       z_tabela_exercicio.numero%TYPE;
  vid_cliente   z_tabela_exercicio.id_cliente%TYPE := 110;
  
BEGIN
  SELECT te.nome, te.numero
  INTO   vnome, vnumero
  FROM   z_tabela_exercicio te
  WHERE  id_cliente = vid_cliente;

  DBMS_OUTPUT.PUT_LINE('Empregado: ' || vnome || ' ' || vnumero);
 
EXCEPTION
  WHEN NO_DATA_FOUND 
  THEN
     RAISE_APPLICATION_ERROR(-20001, 'Empregado n√£o encontrado, id = ' || 
     TO_CHAR(vid_cliente));
  WHEN OTHERS 
  THEN
     RAISE_APPLICATION_ERROR(-20002, 'Erro Oracle - ' || SQLCODE || SQLERRM);

END;
